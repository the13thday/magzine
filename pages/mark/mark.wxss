/* pages/mark/mark.wxss */
.open {
    display: block;
    width: 200rpx;
    height: 200rpx;
    overflow:hidden;
}
.container {
}
.user-container {
    position: relative;
    box-sizing: border-box;
    padding: 30rpx 40rpx;
    height: 300rpx;
    background-color: #fff;
    margin-bottom: 80rpx;
}
.user-info {
    display: flex;
    justify-content: space-between;
}
.user-name {
    font-size: 40rpx;
    font-weight: 400;
    letter-spacing: 5rpx;
}
.user-avatar,
.login-btn {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.share {
    position: absolute;
    bottom: 40rpx;
    left: 30rpx;
    width: 100rpx;
    height: 100rpx;
}
.share image {
    margin: 0;
    display: block;
    width: 100%;
    height: 100%;
}

.login-btn {
    padding: 0;
    border: none;
    margin: 0;
}
.login-btn image {
    width: 100%;
    height: 100%;
}
.article-list {
    width: 100;
    height: 200rpx;
    background-color: #fff;
}