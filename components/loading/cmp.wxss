/* components/loading/cmp.wxss */
.container {
    position: relative;
    width: 60rpx;
    height: 60rpx;
}
.circle {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: rgba(0,0,0,0.6);
    animation: changeSize 2s infinite; 
}
.circle:first-child {
    animation-delay: 1s;
}

@keyframes changeSize {
    0% {
        transform: scale(0);
    }
    50% {
        transform: scale(1);
    }
    100% {
        transform: scale(0);
    }
}
