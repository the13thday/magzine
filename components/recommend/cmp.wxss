/* components/recommend/cmp.wxss */
.main-title {
    position: relative;
    font-size: 80rpx;
    font-weight: 600;
    letter-spacing: 10rpx;
    text-align: center;
    padding: 20rpx 0;
}
.main-title::after {
    position: absolute;
    left: calc(50% - 80rpx);
    bottom: 0;
    content: '';
    display: block;
    height: 4rpx;
    width: 160rpx;
    background-color: red;
}
.title {
    padding: 20rpx;
    width: 100;
    text-align: center;
}
.image-container {
    width: 700rpx;
    height: 700rpx;
    margin: auto;
}
.image {
    width: 100%;
    height: 100%;
}
.loading-bg {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #888;
}
.loading {
    position: absolute;
    left: calc(50% - 30rpx);
    top: calc(50% - 30rpx);
    width: 60rpx;
    height: 60rpx;
    border: 10rpx solid rgba(0,0,0,0.6);
    border-bottom-color: transparent;
    border-radius: 50%;
    animation: rotate 1s linear infinite;
}
@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}